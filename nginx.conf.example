# Nginx Configuration untuk UrunanKita.id
# Simpan di: /etc/nginx/sites-available/urunankita.id
# Atau: /www/server/panel/vhost/nginx/urunankita.id.conf (untuk BT Panel)

# Main Domain - urunankita.id
server {
    listen 80;
    listen [::]:80;
    server_name urunankita.id www.urunankita.id;
    
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name urunankita.id www.urunankita.id;
    
    # SSL Configuration (sesuaikan dengan path SSL certificate Anda)
    ssl_certificate /path/to/ssl/certificate.crt;
    ssl_certificate_key /path/to/ssl/private.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    
    # Document Root - PENTING: Point ke folder public/
    root /www/wwwroot/urunankita.id/urunankita/public;
    index index.php index.html;
    
    # Log files
    access_log /www/wwwlogs/urunankita.id.log;
    error_log /www/wwwlogs/urunankita.id.error.log;
    
    # Max upload size
    client_max_body_size 50M;
    
    # CodeIgniter 4 Routing
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # PHP Handler
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_pass unix:/tmp/php-cgi-83.sock;  # Sesuaikan dengan PHP version Anda
        # Atau gunakan: fastcgi_pass 127.0.0.1:9000;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Timeout settings
        fastcgi_read_timeout 300;
        fastcgi_send_timeout 300;
    }
    
    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Deny access to .env file
    location ~ /\.env {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Deny access to writable folder (kecuali uploads)
    location ~ ^/writable/(?!uploads/) {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # Allow access to uploads
    location ~ ^/writable/uploads/ {
        try_files $uri =404;
    }
    
    # Static files caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
}

# Wildcard Subdomain - {tenant}.urunankita.id
